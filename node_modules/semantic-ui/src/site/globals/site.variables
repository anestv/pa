/*******************************
  PrivateAsk Global Variables
*******************************/

/*-------------------
       Fonts
--------------------*/

@headerFont        : 'Comfortaa', 'Helvetica Neue', Arial, Helvetica, sans-serif;
@pageFont          : 'Open Sans', 'Helvetica Neue', Arial, Helvetica, sans-serif;

@googleFontName    : 'Open+Sans|Damion|Comfortaa';
@googleFontSizes   : '400,700'; // only apply to last font i.e. Comfortaa. This is intentional
@googleSubset      : 'latin,greek';


/*-------------------
      Site Colors
--------------------*/

/*---  Colors  ---*/
@blue             : #178BD4;
@orange           : #F89A17;

/*---  Light Colors  ---*/
@lightBlue        : #54C8FF;
@lightOrange      : #F2A944;

/*-------------------
    Brand Colors
--------------------*/

@primaryColor        : @orange;
@secondaryColor      : @blue;

@lightPrimaryColor   : @lightOrange;
@lightSecondaryColor : @lightBlue;

/*-------------------
        Page
--------------------*/

@pageBackground      : darken(@secondaryColor, 5) linear-gradient(to bottom,
                        @secondaryColor, darken(@secondaryColor, 10)) fixed;

/*-------------------
  Highlighted Text
--------------------*/

@highlightBackground : fade(@secondaryColor, 50%);
